<!doctype html>
<html lang='en'>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Profile</title>
    <link rel='stylesheet' href='/css/style.css'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous'>
</head>

<body>
    <%- include('partials/navbar') %>

        <section>
            <div class="main_profile">
                <span class="head_span">My Profile</span>
                <form action="/api/user/update" method="post">
                    <div class="profile_form">
                        <div class="row">
                            <div class=" col-md-6 fullname my-3">
                                <span>Fullname</span>
                                <input required type="text" value="<%= fullname %>" name="fullname"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-md-6 usertype my-3 overflow-hidden">
                                <span>User Type</span><br>
                                <select required name="type" class="col-md-6 form-select bg-light" id="user_type"
                                    aria-label="Default select example">
                                    <option value="Charity" <% if (type==='Charity' ) { %>selected<% } %>>Charity
                                    </option>
                                    <option value="Donator" <% if (type==='Donator' ) { %>selected<% } %>>Donator
                                    </option>
                                </select>

                            </div>
                            <div class="col-md-6 my-3">
                                <span>Email</span>
                                <input required type="email" value="<%= email %>" name="email"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-md-6 country my-3">
                                <span>Country</span>
                                <input required type="text" value="<%= country %>" name="country"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div  class="col-md-6 phonenumber my-3">
                                <span>Phone Number</span>
                                <input required type="text" name="phone_num" value="<%= phone_num %>"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-md-6 City my-3">
                                <span>City</span>
                                <input required type="text" value="<%= city %>" name="city"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="update-btn text-center w-100 p-0 my-3">

                                <button id="update-button" class="update-button  ">Update</button>
                                <button id="save-button" type="submit" class="save-button  ">Save</button>

                            </div>
                        </div>

                    </div>
                </form>

            </div>
        </section>





        <script src="/js/app.js"></script>

        <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN'
            crossorigin='anonymous'></script>
</body>

</html>