<!doctype html>
<html lang='en'>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>item details</title>
    <link rel='stylesheet' href='/css/style.css'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous'>
</head>

<body>
    <!-- navbar -->

    <%- include('partials/navbar') %>
        <!-- main -->
        <main>
            <div class="main_item_details mt-5 d-flex justify-content-between">
                <div class="left ">
                    <img src="/uploads/<%= data.image %>" class="w-100" alt="Cupboard">
                </div>
                <div class="right ">
                    <form method="post" action="/api/request">
                        <div class="row">

                            <div class="col-12  fullname my-2">
                                Name<span class="text-danger">*</span>
                                <input readonly value="<%= data.item_name %>" type="text" required name="Name"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-12  Type my-2">
                                Type<span class="text-danger">*</span>
                                <input readonly value="<%= data.item_type %>" type="text" required name="Type"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <input name="item_id" hidden value="<%= data._id %>" type="text">
                            <div class="col-12 usertype my-2 overflow-hidden">
                                Conditions<span class="text-danger">*</span><br>
                                <select class="form-select bg-light" id="user_type" aria-label="Default select example">

                                    <option value="New" <% if (data.item_type==='New' ) { %>selected <% } %>>New
                                    </option>
                                    <option value="Lightly used" <% if (data.item_type==='Lightly used' ) { %>selected
                                        <% } %>>Lightly used
                                    </option>
                                    <option value="Moderately used" <% if (data.item_type==='Moderately used' ) { %>
                                        selected <% } %>>Moderately used</option>
                                    <option value="Heavily used" <% if (data.item_type==='Heavily used' ) { %>selected
                                        <% } %>>Heavily used
                                    </option>
                                    <option value="Damaged" <% if (data.item_type==='Damaged' ) { %>selected <% } %>
                                            >Damaged/Needs fixing</option>

                                </select>

                            </div>
                            <div class="col-12  Description my-2">
                                Description<span class="text-danger">*</span>
                                <input value="<%= data.dimensions %>" type="text" required name="Description"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-12  Donator my-2">
                                Donator<span class="text-danger">*</span>
                                <input value="<%= username %>" type="text" required name="Donator"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-12 col-sm-6  country my-2">
                                country<span class="text-danger">*</span>
                                <input value="<%= data.country %>" type="text" required name="country"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-12 col-sm-6  city my-2">
                                city<span class="text-danger">*</span>
                                <input value="<%= data.city %>" type="text" required name="city"
                                    class="w-100 p-2 form-control bg-light">
                            </div>

                        </div>
                        <div class="Request-btn text-center w-100 p-0 my-3">
                            <% if (own_item) { %>
                                <button type="submit" id="Request-button" class="Request-button" disabled>Owned</button>
                                <% } else { %>
                                    <button type="submit" id="Request-button" class="Request-button">Request</button>
                                    <% } %>
                        </div>

                    </form>

                </div>

            </div>




        </main>


        <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN'
            crossorigin='anonymous'></script>
</body>

</html>