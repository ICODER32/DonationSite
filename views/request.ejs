<!doctype html>
<html lang='en'>

<head>
    <meta charset='utf-8'>
    <meta name='viewport' content='width=device-width, initial-scale=1'>
    <title>Request</title>
    <link rel='stylesheet' href='/css/style.css'>
    <link href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css' rel='stylesheet'
        integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD' crossorigin='anonymous'>
</head>

<body>
    <!-- navbar -->

    <%- include('partials/navbar') %>
        <!-- Main -->
        <main>
            <div class="main_item_details mt-3 d-flex justify-content-between">
                <div class="left d-flex align-items-start">
                    <img src="/uploads/<%= image %>" class="w-100" alt="Cupboard">
                </div>
                <div class="right ">
                    <form>
                        <div class="row">

                            <div class="col-12  Orgnization my-2">
                                Orgnization<span class="text-danger">*</span>
                                <input type="text" value="<%= fullname %>" required name="Orgnization"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-12  Type my-2">
                                Type<span class="text-danger">*</span>
                                <input value="<%= item_name %>" type="text" required name="Type"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-6  country my-2">
                                country<span class="text-danger">*</span>
                                <input value="<%= country %>" type="text" required name="country"
                                    class="w-100 p-2 form-control bg-light">
                            </div>
                            <div class="col-6  city my-2">
                                city<span class="text-danger">*</span>
                                <input value="<%= city %>" type="text" required name="city"
                                    class="w-100 p-2 form-control bg-light">
                            </div>

                        </div>
                    </form>
                    <div class="Request-btn text-center w-100 p-0 mt-2 mt-md-5">
                        <a href="/accept/<%= id %>"">
                            <button id=" accept-Request-button" class="accept-Request-button mx-2">Accept</button>

                        </a>
                        <a href="/reject/<%= id %>">
                            <button id="cancel-Request-button" class="cancel-Request-button mx-2">Reject</button>

                        </a>

                    </div>

                </div>

            </div>

        </main>
        <script src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js'
            integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN'
            crossorigin='anonymous'></script>
</body>

</html>